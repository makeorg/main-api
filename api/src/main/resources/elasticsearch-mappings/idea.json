{
  "settings": {
    "number_of_shards": 5,
    "analysis": {
      "filter": {
        "french_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": ["l", "m", "t", "qu", "n", "s", "j", "d", "c", "jusqu", "quoiqu", "lorsqu", "puisqu"]
        },
        "english_possessive_stemmer": {
          "type":       "stemmer",
          "language":   "possessive_english"
        },
        "italian_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": [
            "c", "l", "all", "dall", "dell",
            "nell", "sull", "coll", "pell",
            "gl", "agl", "dagl", "degl", "negl",
            "sugl", "un", "m", "t", "s", "v", "d"
          ]
        },
        "trigrams_filter": {
          "type":     "ngram",
          "min_gram": 3,
          "max_gram": 3
        }
      },
      "analyzer": {
        "french_std": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "french_elision",
            "icu_folding"
          ]
        },
        "english_std": {
          "tokenizer":  "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase"
          ]

        },
        "italian_std": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "italian_elision",
            "icu_folding"
          ]
        },
        "trigrams": {
          "type":      "custom",
          "tokenizer": "icu_tokenizer",
          "filter":   [
            "lowercase",
            "trigrams_filter"
          ]
        }
      }
    }
  },
  "mappings": {
    "idea": {
      "dynamic": "strict",
      "properties": {
        "ideaId": {
          "type": "keyword",
          "index": true
        },
        "name": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            },
            "fr": {
              "type": "text",
              "analyzer": "french_std"
            },
            "en": {
              "type": "text",
              "analyzer": "english_std"
            },
            "it": {
              "type": "text",
              "analyzer": "italian_std"
            },
            "general": {
              "type": "text"
            }
          }
        },
        "createdAt": {
          "type": "date",
          "format": "date_time"
        },
        "updatedAt": {
          "type": "date",
          "format": "date_time"
        },
        "operationId": {
          "type": "keyword",
          "index": true
        },
        "questionId": {
          "type": "keyword",
          "index": true
        },
        "themeId": {
          "type": "keyword",
          "index": true
        },
        "question": {
          "type": "keyword",
          "index": true
        },
        "language": {
          "type": "keyword",
          "index": true
        },
        "country": {
          "type": "keyword",
          "index": true
        },
        "status": {
          "type": "keyword",
          "index": true
        }
      }
    }
  }
}
