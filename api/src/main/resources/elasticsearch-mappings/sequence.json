{
  "settings": {
    "number_of_shards": 5,
    "analysis": {
      "filter": {
        "french_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": ["l", "m", "t", "qu", "n", "s", "j", "d", "c", "jusqu", "quoiqu", "lorsqu", "puisqu"]
        },
        "english_possessive_stemmer": {
          "type":       "stemmer",
          "language":   "possessive_english"
        },
        "italian_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": [
            "c", "l", "all", "dall", "dell",
            "nell", "sull", "coll", "pell",
            "gl", "agl", "dagl", "degl", "negl",
            "sugl", "un", "m", "t", "s", "v", "d"
          ]
        },
        "trigrams_filter": {
          "type":     "ngram",
          "min_gram": 3,
          "max_gram": 3
        }
      },
      "analyzer": {
        "french_std": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "french_elision",
            "icu_folding"
          ]
        },
        "english_std": {
          "tokenizer":  "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase"
          ]

        },
        "italian_std": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "italian_elision",
            "icu_folding"
          ]
        },
        "german_std": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "german_normalization",
            "lowercase",
            "icu_folding"
          ]
        },
        "trigrams": {
          "type":      "custom",
          "tokenizer": "icu_tokenizer",
          "filter":   [
            "lowercase",
            "trigrams_filter"
          ]
        }
      }
    }
  },
  "mappings": {
    "sequence": {
      "dynamic": "strict",
      "properties": {
        "id": {
          "type": "keyword",
          "index": true
        },
        "title": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            },
            "fr": {
              "type": "text",
              "analyzer": "french_std"
            },
            "en": {
              "type": "text",
              "analyzer": "english_std"
            },
            "it": {
              "type": "text",
              "analyzer": "italian_std"
            },
            "de": {
              "type": "text",
              "analyzer": "german_std"
            },
            "general": {
              "type": "text"
            }
          }
        },
        "createdAt": {
          "type": "date",
          "format": "date_time"
        },
        "updatedAt": {
          "type": "date",
          "format": "date_time"
        },
        "slug": {
          "type": "keyword",
          "index": true
        },
        "context": {
          "type": "object",
          "properties": {
            "operation": {
              "type": "keyword",
              "index": true
            },
            "source": {
              "type": "keyword",
              "index": true
            },
            "location": {
              "type": "keyword",
              "index": true
            },
            "question": {
              "type": "keyword",
              "index": true
            }
          }
        },
        "themes": {
          "type": "object",
          "properties": {
            "translation": {
              "type": "nested",
              "properties": {
                "slug": {
                  "type": "keyword",
                  "index": false
                },
                "title": {
                  "type": "text",
                  "index": true
                },
                "language": {
                  "type": "keyword",
                  "index": true
                }
              }
            },
            "themeId": {
              "type": "keyword",
              "index": true
            }
          }
        },
        "operationId": {
          "type": "keyword",
          "index": true
        },
        "proposals": {
          "type": "object",
          "properties": {
            "proposalId": {
              "type": "keyword",
              "index": true
            }
          }
        },
        "status": {
          "type": "keyword",
          "index": true
        },
        "translation": {
          "type": "object",
          "properties": {
            "language": {
              "type": "keyword",
              "index": true
            },
            "title": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                },
                "fr": {
                  "type": "text",
                  "analyzer": "french_std"
                },
                "en": {
                  "type": "text",
                  "analyzer": "english_std"
                },
                "it": {
                  "type": "text",
                  "analyzer": "italian_std"
                },
                "de": {
                  "type": "text",
                  "analyzer": "german_std"
                },
                "general": {
                  "type": "text",
                  "analyzer": "trigrams"
                }
              }
            },
            "slug": {
              "type": "keyword",
              "index": true
            }
          }
        },
        "searchable": {
          "type": "boolean",
          "index": true
        }
      }
    }
  }
}
