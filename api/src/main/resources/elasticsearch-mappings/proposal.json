{
  "settings": {
    "analysis": {
      "filter": {
        "french_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": ["l", "m", "t", "qu", "n", "s", "j", "d", "c", "jusqu", "quoiqu", "lorsqu", "puisqu"]
        },
        "french_stemmer": {
          "type": "stemmer",
          "language": "light_french"
        },
        "english_stemmer": {
          "type":       "stemmer",
          "language":   "english"
        },
        "english_possessive_stemmer": {
          "type":       "stemmer",
          "language":   "possessive_english"
        },
        "italian_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": [
            "c", "l", "all", "dall", "dell",
            "nell", "sull", "coll", "pell",
            "gl", "agl", "dagl", "degl", "negl",
            "sugl", "un", "m", "t", "s", "v", "d"
          ]
        },
        "italian_stemmer": {
          "type": "stemmer",
          "language": "light_italian"
        },
        "trigrams_filter": {
          "type":     "ngram",
          "min_gram": 3,
          "max_gram": 3
        }
      },
      "analyzer": {
        "french_std": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "french_elision",
            "icu_folding"
          ],
          "char_filter": [
            "make_char_filter-fr"
          ]
        },
        "french_full": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "french_elision",
            "icu_folding",
            "french_stemmer"
          ],
          "char_filter": [
            "make_char_filter-fr"
          ]
        },
        "english_std": {
          "tokenizer":  "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase"
          ],
          "char_filter": [
            "make_char_filter-en"
          ]

        },
        "english_full": {
          "tokenizer":  "icu_tokenizer",
          "filter": [
            "english_possessive_stemmer",
            "icu_folding",
            "lowercase",
            "english_stemmer"
          ],
          "char_filter": [
            "make_char_filter-en"
          ]

        },
        "italian_std": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "italian_elision",
            "icu_folding"
          ],
          "char_filter": [
            "make_char_filter-it"
          ]
        },
        "italian_full": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "italian_elision",
            "icu_folding",
            "italian_stemmer"
          ],
          "char_filter": [
            "make_char_filter-it"
          ]
        },
        "trigrams": {
          "type":      "custom",
          "tokenizer": "icu_tokenizer",
          "filter":   [
            "lowercase",
            "trigrams_filter"
          ]
        }
      },
      "char_filter": {
        "make_char_filter-fr": {
          "type": "pattern_replace",
          "pattern": "^Il faut",
          "replacement": ""
        },
        "make_char_filter-en": {
          "type": "pattern_replace",
          "pattern": "^We should",
          "replacement": ""
        },
        "make_char_filter-it": {
          "type": "pattern_replace",
          "pattern": "^C'Ã¨ bisogno",
          "replacement": ""
        }
      }
    }
  },
  "mappings": {
    "proposal": {
      "dynamic": "strict",
      "properties": {
        "id": {
          "type": "keyword",
          "index": true
        },
        "userId": {
          "type": "keyword",
          "index": true
        },
        "questionId": {
          "type": "keyword",
          "index": true
        },
        "content": {
          "type": "text",
          "index": true,
          "fields": {
            "fr": {
              "type": "text",
              "analyzer": "french_std"
            },
            "stemmed-fr": {
              "type": "text",
              "analyzer": "french_full"
            },
            "en": {
              "type": "text",
              "analyzer": "english_std"
            },
            "stemmed-en": {
              "type": "text",
              "analyzer": "english_full"
            },
            "it": {
              "type": "text",
              "analyzer": "italian_std"
            },
            "stemmed-it": {
              "type": "text",
              "analyzer": "italian_full"
            },
            "general": {
              "type": "text"
            }
          }
        },
        "refusalReason": {
          "type": "keyword",
          "index": false
        },
        "status": {
          "type": "keyword",
          "index": true
        },
        "createdAt": {
          "type": "date",
          "format": "date_time",
          "index": true
        },
        "updatedAt": {
          "type": "date",
          "format": "date_time",
          "index": true
        },
        "votes": {
          "type": "object",
          "properties": {
            "key": {
              "type": "keyword",
              "index": true
            },
            "count": {
              "type": "integer",
              "index": true
            },
            "selected": {
              "type": "boolean",
              "index": true
            },
            "qualifications": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "keyword",
                  "index": true
                },
                "count": {
                  "type": "integer",
                  "index": true
                }
              }
            }
          }
        },
        "scores": {
          "type": "object",
          "properties": {
            "boost": {
              "type": "double",
              "index": true
            },
            "engagement": {
              "type": "double",
              "index": true
            },
            "adhesion": {
              "type": "double",
              "index": true
            },
            "realistic": {
              "type": "double",
              "index": true
            },
            "topScore": {
              "type": "double",
              "index": true
            },
            "controversy": {
              "type": "double",
              "index": true
            },
            "rejection": {
              "type": "double",
              "index": true
            }
          }
        },
        "slug": {
          "type": "keyword",
          "index": true
        },
        "context": {
          "type": "object",
          "properties": {
            "operation": {
              "type": "keyword",
              "index": true
            },
            "source": {
              "type": "keyword",
              "index": true
            },
            "location": {
              "type": "keyword",
              "index": true
            },
            "question": {
              "type": "keyword",
              "index": true
            }
          }
        },
        "trending": {
          "type": "keyword",
          "index": true
        },
        "labels": {
          "type": "keyword",
          "index": true
        },
        "author": {
          "type": "object",
          "properties": {
            "firstName": {
              "type": "text",
              "index": true
            },
            "organisationName": {
              "type": "text",
              "index": true
            },
            "postalCode": {
              "type": "keyword",
              "index": false
            },
            "age": {
              "type": "integer",
              "index": false
            },
            "avatarUrl": {
              "type": "text",
              "index": false
            }
          }
        },
        "organisations": {
          "type": "object",
          "properties": {
            "organisationId": {
              "type": "keyword",
              "index": true
            },
            "organisationName": {
              "type": "text",
              "index": true
            }
          }
        },
        "tags": {
          "type": "object",
          "properties": {
            "label": {
              "type": "keyword",
              "index": true
            },
            "tagId": {
              "type": "keyword",
              "index": true
            },
            "display": {
              "type": "boolean",
              "index": false
            }
          }
        },
        "themeId": {
          "type": "keyword",
          "index": true
        },
        "country": {
          "type": "keyword",
          "index": true
        },
        "language": {
          "type": "keyword",
          "index": true
        },
        "ideaId": {
          "type": "keyword",
          "index": true
        },
        "operationId": {
          "type": "keyword",
          "index": true
        }
      }
    }
  }
}
