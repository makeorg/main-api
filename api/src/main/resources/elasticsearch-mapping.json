{
  "settings": {
    "analysis": {
      "filter": {
        "french_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": ["l", "m", "t", "qu", "n", "s", "j", "d", "c", "jusqu", "quoiqu", "lorsqu", "puisqu"]
        },
        "french_stemmer": {
          "type": "stemmer",
          "language": "light_french"
        }
      },
      "analyzer": {
        "french_std": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "french_elision",
            "icu_folding"
          ],
          "char_filter": [
            "make_char_filter"
          ]
        },
        "french_full": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "french_elision",
            "icu_folding",
            "french_stemmer"
          ],
          "char_filter": [
            "make_char_filter"
          ]
        }
      },
      "char_filter": {
        "make_char_filter": {
          "type": "pattern_replace",
          "pattern": "^Il faut",
          "replacement": ""
        }
      }
    }
  },
  "mappings": {
    "sequence": {
      "dynamic": "strict",
      "properties": {
        "id": {
          "type": "keyword",
          "index": true
        },
        "title": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            },
            "french": {
              "type": "text",
              "analyzer": "french"
            }
          }
        },
        "createdAt": {
          "type": "date",
          "format": "date_time"
        },
        "updatedAt": {
          "type": "date",
